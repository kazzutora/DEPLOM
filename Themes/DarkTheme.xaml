<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Кольори -->
    <Color x:Key="BackgroundDark">#FF1E1E1E</Color>
    <Color x:Key="CardDark">#FF252526</Color>
    <Color x:Key="TextDark">#FFFFFFFF</Color>
    <Color x:Key="BorderDark">#FF3C3C3C</Color>
    <Color x:Key="PrimaryDark">#FF0078D7</Color>
    <Color x:Key="PrimaryBrushLowOpacityDark">#330078D7</Color>

    <!-- Пензлі -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundDark}"/>
    <SolidColorBrush x:Key="CardBrush" Color="{StaticResource CardDark}"/>
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextDark}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderDark}"/>
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryDark}"/>
    <SolidColorBrush x:Key="PrimaryBrushLowOpacity" Color="{StaticResource PrimaryBrushLowOpacityDark}"/>

    <!-- Тінь -->
    <DropShadowEffect x:Key="CardShadow" BlurRadius="10" ShadowDepth="1" Color="#40000000"/>

    <!-- Стилі кнопок -->
    <Style x:Key="IconButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>

    <Style x:Key="FlatButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="10 5"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>
</ResourceDictionary>