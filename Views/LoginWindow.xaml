<Window x:Class="WpfApp1.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вхід" Height="250" Width="300">
    <StackPanel Margin="15">
        <TextBlock Text="Логін:"/>
        <TextBox x:Name="txtUsername" Margin="0 5"/>

        <TextBlock Text="Пароль:" Margin="0 10 0 0"/>
        <PasswordBox x:Name="txtPassword" Margin="0 5"/>

        <Button Content="Увійти" Click="Login_Click" Margin="0 15" Padding="10 3"/>
    </StackPanel>
</Window>