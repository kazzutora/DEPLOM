<Window x:Class="WpfApp1.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вхід до системи" 
        Height="400" 
        Width="500"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Border VerticalAlignment="Center" HorizontalAlignment="Center"
                CornerRadius="10"
                Padding="40 30"
                Width="400"
                Background="#F0F0F0"
                BorderBrush="#CCCCCC"
                BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Вхід до POS System" 
                           FontSize="24" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0 0 0 20"/>

                <TextBlock Text="Логін:"/>
                <TextBox x:Name="txtUsername"
                         FontSize="16"
                         Height="40"/>

                <TextBlock Text="Пароль:" Margin="0 15 0 0"/>
                <PasswordBox x:Name="txtPassword"
                             Height="40"/>

                <Button Content="Увійти" 
                        Click="Login_Click"
                        Background="#4CAF50"
                        Foreground="White"
                        FontWeight="SemiBold"
                        Margin="0 20 0 0"
                        Padding="10 5"/>

                <TextBlock Text="* Використовуйте admin/admin для входу"
                           Opacity="0.7"
                           FontSize="12"
                           Margin="0 15 0 0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <TextBlock Text="POS System v1.0 © 2025" 
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Center"
                   Margin="0 0 0 20"
                   Opacity="0.6"/>
    </Grid>
</Window>