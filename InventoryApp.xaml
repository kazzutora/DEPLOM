<Window x:Class="InventoryApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventoryApp"
        mc:Ignorable="d"
        Title="Система управління запасами" Height="600" Width="800">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <TabControl>
        <!-- Вкладка замовлення товарів -->
        <TabItem Header="Замовлення товарів">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Панель пошуку та фільтрів -->
                <StackPanel Orientation="Horizontal" Grid.Row="0">
                    <TextBox Width="200" Margin="5" 
                             Text="{Binding ProductFilter, UpdateSourceTrigger=PropertyChanged}"
                             ToolTip="Пошук товару"/>
                    <ComboBox Width="150" Margin="5" 
                              SelectedItem="{Binding SelectedStatusFilter}"
                              ItemsSource="{Binding StatusFilters}"/>
                </StackPanel>

                <!-- Список товарів -->
                <DataGrid Grid.Row="1" ItemsSource="{Binding FilteredProducts}" 
                          AutoGenerateColumns="False" IsReadOnly="True"
                          SelectionMode="Single" SelectionUnit="FullRow">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Назва товару" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Категорія" Binding="{Binding Category}" Width="120"/>
                        <DataGridTextColumn Header="Кількість" Binding="{Binding Quantity}" Width="80"/>
                        <DataGridTextColumn Header="Мін. запас" Binding="{Binding MinStock}" Width="80"/>
                        <DataGridTextColumn Header="Статус" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="{Binding StatusColor}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                            <DataGridTextColumn.Binding>
                                <Binding Path="Status"/>
                            </DataGridTextColumn.Binding>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Постачальник" Binding="{Binding SupplierName}" Width="*"/>
                        <DataGridTemplateColumn Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Замовити" Margin="2" Padding="5,2"
                                            Command="{Binding DataContext.PlaceOrderCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            Visibility="{Binding CanOrder, Converter={StaticResource BoolToVis}}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Форма замовлення -->
                <Border Grid.Row="2" BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,10,0,0"
                        Visibility="{Binding IsOrderFormVisible, Converter={StaticResource BoolToVis}}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Товар:" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBlock Text="Постачальник:" FontWeight="Bold" Margin="0,10,0,5"/>
                            <TextBlock Text="Кількість:" FontWeight="Bold" Margin="0,10,0,5"/>
                            <TextBlock Text="Коментар:" FontWeight="Bold" Margin="0,10,0,5"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="5,0,10,0">
                            <TextBox Text="{Binding SelectedProduct.Name}" IsReadOnly="True" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding SelectedProduct.SupplierName}" IsReadOnly="True" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding OrderQuantity}" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding OrderComment}" AcceptsReturn="True" Height="60"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Orientation="Vertical">
                            <Button Content="Підтвердити" Command="{Binding ConfirmOrderCommand}" 
                                    Width="100" Margin="0,0,0,10" Padding="5"/>
                            <Button Content="Скасувати" Command="{Binding CancelOrderCommand}" 
                                    Width="100" Padding="5"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </TabItem>
    </TabControl>
</Window>