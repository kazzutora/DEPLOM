<Window x:Class="WpfApp1.AddEditProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Додати/Редагувати продукт" Height="550" Width="500">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Додати/Редагувати продукт" FontSize="18" FontWeight="Bold" Margin="10" HorizontalAlignment="Center"/>

        <!-- Поля вводу -->
        <StackPanel Grid.Row="1" Margin="10">
            <TextBlock Text="Назва продукту:" FontWeight="Bold"/>
            <TextBox x:Name="NameTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Категорія:" FontWeight="Bold"/>
            <ComboBox x:Name="CategoryComboBox" Margin="0,5,0,10"/>

            <TextBlock Text="Кількість:" FontWeight="Bold"/>
            <TextBox x:Name="QuantityTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Ціна:" FontWeight="Bold"/>
            <TextBox x:Name="PriceTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Постачальник:" FontWeight="Bold"/>
            <ComboBox x:Name="SupplierComboBox" Margin="0,5,0,10"/>

            <TextBlock Text="Ціна закупівлі" FontWeight="Bold"/>
            <TextBox x:Name="PurchasePriceTextBox" />

            <!-- Відображення вибраного фото -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,30">
                <Image x:Name="ProductImage" Width="150" Height="150" Stretch="UniformToFill" Margin="10"/>
                <Button x:Name="BrowseButton" Content="Вибрати фото" Click="BrowseButton_Click" 
                        Background="LightBlue" Padding="5" VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>

        <!-- Кнопки управління -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Зберегти" Click="SaveButton_Click" Background="Green" Foreground="White" Width="100" Margin="5"/>
            <Button Content="Скасувати" Click="CancelButton_Click" Background="Gray" Foreground="White" Width="100" Margin="5"/>
        </StackPanel>
        
    </Grid>
</Window>
