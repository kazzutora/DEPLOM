<Window x:Class="WpfApp1.SuppliersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Постачальники" 
        Height="500" 
        Width="800"
        WindowStartupLocation="CenterScreen">

    <Border Background="#FFFAFAFA" 
            CornerRadius="8" 
            Margin="16" 
            Padding="16">
        <Border.Effect>
            <!-- Фікс: змінено Color="Black" на коректний формат -->
            <DropShadowEffect BlurRadius="10" 
                              ShadowDepth="2" 
                              Opacity="0.25" 
                              Color="#FF000000"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Text="Управління постачальниками" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Margin="0 0 0 10"
                       Foreground="#FF1E88E5"/>

            <!-- Пошук -->
            <StackPanel Grid.Row="1" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0 0 0 10">
                <TextBox x:Name="SearchTextBox" 
                         Width="250" 
                         Height="30"
                         Padding="5"
                         VerticalContentAlignment="Center"
                         TextChanged="SearchTextBox_TextChanged"/>
                <Button Content="🔍" 
                        Width="35" 
                        Height="35" 
                        Background="#FF1E88E5"
                        Foreground="White"
                        BorderThickness="0"
                        FontWeight="SemiBold"
                        Click="SearchButton_Click"
                        Margin="5 0 0 0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="4"
                                    Padding="5">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

            <!-- Таблиця постачальників -->
            <Border Grid.Row="2" 
                    BorderBrush="#FFB0B0B0" 
                    BorderThickness="1" 
                    CornerRadius="4" 
                    Background="White"
                    Padding="5">
                <DataGrid x:Name="SuppliersDataGrid"
                          AutoGenerateColumns="False" 
                          CanUserAddRows="False"
                          HeadersVisibility="Column"
                          RowHeight="35"
                          AlternatingRowBackground="#FFF0F0F0"
                          IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" 
                                           Binding="{Binding SupplierID}" 
                                           Width="50"/>
                        <DataGridTextColumn Header="Назва" 
                                           Binding="{Binding Name}" 
                                           Width="*"/>
                        <DataGridTextColumn Header="Контакт" 
                                           Binding="{Binding ContactInfo}" 
                                           Width="2*"/>
                        <DataGridTextColumn Header="Категорія" 
                                           Binding="{Binding Category}" 
                                           Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- Кнопки управління -->
            <StackPanel Grid.Row="3" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0 15 0 0">
                <Button Content="Додати" 
                        Click="AddSupplier_Click" 
                        Background="#FF1E88E5"
                        Foreground="White"
                        BorderThickness="0"
                        FontWeight="SemiBold"
                        Width="120"
                        Height="35"
                        Margin="0 0 8 0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="4"
                                    Padding="5">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="Видалити" 
                        Click="DeleteSupplier_Click" 
                        Background="Transparent"
                        Foreground="#FF1E88E5"
                        BorderThickness="0"
                        Width="120"
                        Height="35">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="4"
                                    Padding="5">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>