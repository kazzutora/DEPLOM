<Window x:Class="WpfApp1.CategoriesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Категорії" Height="450" Width="600"
        Background="White" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Тінь для контейнера -->
        <DropShadowEffect x:Key="DropShadow" BlurRadius="10" ShadowDepth="5" Opacity="0.3"/>

        <!-- Стиль кнопок -->
        <Style x:Key="StyledButton" TargetType="Button">
            <Setter Property="Background" Value="#3498db"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10" Padding="5"
                                Effect="{StaticResource DropShadow}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980b9"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1f618d"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Градієнтний фон -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#3498db" Offset="0.0"/>
                <GradientStop Color="#2980b9" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Заголовок -->
        <Border Background="#AAFFFFFF" Padding="10" CornerRadius="10"
                HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5,0,0">
            <TextBlock Text="Категорії" FontSize="22" FontWeight="Bold" Foreground="#2C3E50"/>
        </Border>

        <!-- Основний контейнер -->
        <Border Background="White" Padding="10" CornerRadius="15"
                Width="500" Height="300"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Effect="{StaticResource DropShadow}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Список категорій -->
                <ListBox x:Name="CategoriesListBox" DisplayMemberPath="CategoryName" 
                         Background="Transparent" BorderThickness="0"
                         FontSize="16" Foreground="#2C3E50"
                         Margin="5"/>

                <!-- Панель кнопок -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1" Margin="10">
                    <Button Content="Додати" Click="AddCategory_Click" Style="{StaticResource StyledButton}"/>
                    <Button Content="Видалити" Click="DeleteCategory_Click" Style="{StaticResource StyledButton}"/>
                    <Button Content="Закрити" Click="Close_Click" Style="{StaticResource StyledButton}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
