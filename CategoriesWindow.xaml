<Window x:Class="WpfApp1.CategoriesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Категорії" 
        Height="450" 
        Width="600"
        WindowStartupLocation="CenterScreen"
        Foreground="{DynamicResource TextBrush}">

    <Border Background="{DynamicResource CardBrush}" 
            CornerRadius="8" 
            Effect="{StaticResource CardShadow}" 
            Margin="16" 
            Padding="16">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Text="Категорії" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Margin="0 0 0 16"
                       HorizontalAlignment="Center"
                       Foreground="{DynamicResource PrimaryBrush}"/>

            <!-- Список категорій -->
            <Border Grid.Row="1" 
                    Background="{DynamicResource LightBackgroundBrush}"
                    CornerRadius="4" 
                    Padding="8"
                    BorderThickness="1"
                    BorderBrush="{DynamicResource BorderBrush}">
                <ListBox x:Name="CategoriesListBox" 
                         DisplayMemberPath="CategoryName" 
                         Background="Transparent" 
                         BorderThickness="0"
                         FontSize="16"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"/>
            </Border>

            <!-- Панель кнопок -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0 16 0 0">
                <Button Content="Додати" 
                        Click="AddCategory_Click" 
                        Style="{DynamicResource PrimaryButton}"
                        Width="120"
                        Margin="0 0 8 0"/>
                <Button Content="Видалити" 
                        Click="DeleteCategory_Click" 
                        Style="{StaticResource FlatButton}"
                        Width="120"
                        Margin="0 0 8 0"/>
                <Button Content="Закрити" 
                        Click="Close_Click" 
                        Style="{StaticResource FlatButton}"
                        Width="120"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>