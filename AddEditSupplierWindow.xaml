<Window x:Class="WpfApp1.AddEditSupplierWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Додати/Редагувати постачальника" 
        Height="350" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        Foreground="{DynamicResource TextBrush}">

    <Border Background="{DynamicResource CardBrush}" 
            CornerRadius="8" 
            Effect="{StaticResource CardShadow}" 
            Margin="16" 
            Padding="16">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Text="Додати/Редагувати постачальника" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Margin="0 0 0 16"
                       HorizontalAlignment="Center"
                       Foreground="{DynamicResource PrimaryBrush}"/>

            <!-- Поля вводу -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <TextBlock Text="Назва постачальника:" 
                           FontWeight="SemiBold" 
                           Margin="0 0 0 4"/>
                <TextBox x:Name="NameTextBox" 
                         Margin="0 0 0 16"/>

                <TextBlock Text="Контактна інформація:" 
                           FontWeight="SemiBold" 
                           Margin="0 0 0 4"/>
                <TextBox x:Name="ContactInfoTextBox" 
                         Margin="0 0 0 16"/>

                <TextBlock Text="Категорія:" 
                           FontWeight="SemiBold" 
                           Margin="0 0 0 4"/>
                <ComboBox x:Name="CategoryComboBox" 
                          Margin="0 0 0 16"/>
            </StackPanel>

            <!-- Кнопки -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0 16 0 0">
                <Button Content="Зберегти" 
                        Click="Save_Click" 
                        Style="{DynamicResource PrimaryButton}"
                        Width="120"/>
                <Button Content="Скасувати" 
                        Click="Cancel_Click" 
                        Style="{StaticResource FlatButton}"
                        Margin="16 0 0 0"
                        Width="120"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>