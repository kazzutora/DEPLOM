<Window x:Class="WpfApp1.AddEditSupplierWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Додати/Редагувати постачальника" Height="350" Width="450">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Додати/Редагувати постачальника" FontSize="18" FontWeight="Bold" Margin="10" HorizontalAlignment="Center"/>

        <!-- Поля вводу -->
        <StackPanel Grid.Row="1" Margin="10">
            <TextBlock Text="Назва постачальника:" FontWeight="Bold"/>
            <TextBox x:Name="NameTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Контактна інформація:" FontWeight="Bold"/>
            <TextBox x:Name="ContactInfoTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Категорія:" FontWeight="Bold"/>
            <ComboBox x:Name="CategoryComboBox" Margin="0,5,0,10" Width="250"/>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Зберегти" Click="Save_Click" Background="Green" Foreground="White" Width="100" Margin="5"/>
            <Button Content="Скасувати" Click="Cancel_Click" Background="Gray" Foreground="White" Width="100" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
