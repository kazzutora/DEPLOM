<Window x:Class="WpfApp1.WriteOffWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Списання товару" Height="650" Width="900"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="8 4"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#388E3C"/>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="RowHeight" Value="30"/>
            <Setter Property="AlternatingRowBackground" Value="#F5F5F5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Списання товарів" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- Вкладки -->
        <TabControl Grid.Row="1">
            <!-- Вкладка нового списання -->
            <TabItem Header="Нове списання">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Товар -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Товар:" Margin="0,0,5,5" VerticalAlignment="Center"/>
                    <ComboBox x:Name="ProductComboBox" Grid.Row="0" Grid.Column="1" 
                              DisplayMemberPath="Name" Margin="0,0,0,5" Height="30"/>

                    <!-- Кількість -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Кількість:" Margin="0,0,5,5" VerticalAlignment="Center"/>
                    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBox x:Name="QuantityTextBox" Width="100" Height="30"/>
                        <TextBlock Text="Доступно:" Margin="10,0,5,0" VerticalAlignment="Center"/>
                        <TextBlock x:Name="AvailableQuantityText" VerticalAlignment="Center" FontWeight="Bold"/>
                    </StackPanel>

                    <!-- Причина -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Причина:" Margin="0,0,5,5" VerticalAlignment="Center"/>
                    <ComboBox x:Name="ReasonComboBox" Grid.Row="2" Grid.Column="1" Margin="0,0,0,5" Height="30">
                        <ComboBoxItem>Псування</ComboBoxItem>
                        <ComboBoxItem>Втрата</ComboBoxItem>
                        <ComboBoxItem>Крадіжка</ComboBoxItem>
                        <ComboBoxItem>Закінчився термін</ComboBoxItem>
                        <ComboBoxItem>Інше</ComboBoxItem>
                    </ComboBox>

                    <!-- Опис -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Опис:" Margin="0,0,5,5" VerticalAlignment="Top"/>
                    <TextBox x:Name="DescriptionTextBox" Grid.Row="3" Grid.Column="1" 
                             Height="80" Margin="0,0,0,5" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>

                    <!-- Інформація про товар -->
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Інформація:" Margin="0,10,5,5" VerticalAlignment="Top"/>
                    <StackPanel Grid.Row="4" Grid.Column="1" Margin="0,10,0,5">
                        <TextBlock x:Name="ProductInfoText" TextWrapping="Wrap"/>
                    </StackPanel>

                    <!-- Кнопки -->
                    <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Списати" Width="100" Click="WriteOffButton_Click" Background="#2196F3"/>
                        <Button Content="Скасувати" Width="100" Click="CancelButton_Click" Background="#F44336"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Вкладка історії списаних товарів -->
            <TabItem Header="Історія списаних товарів">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Фільтри -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Період з:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <DatePicker x:Name="StartDatePicker" Width="120" Margin="0,0,15,0"/>

                        <TextBlock Text="по:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <DatePicker x:Name="EndDatePicker" Width="120" Margin="0,0,15,0"/>

                        <Button Content="Застосувати фільтр" Click="ApplyFilter_Click" Width="120"/>
                        <Button Content="Скинути фільтр" Click="ResetFilter_Click" Margin="5,0,0,0" Width="100"/>
                    </StackPanel>

                    <!-- Пошук -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Пошук:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox x:Name="SearchTextBox" Width="250" Margin="0,0,10,0"/>
                        <Button Content="Пошук" Click="SearchButton_Click" Width="80"/>
                    </StackPanel>

                    <!-- Таблиця історії -->
                    <DataGrid x:Name="HistoryDataGrid" Grid.Row="2" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Дата" Binding="{Binding WriteOffDate, StringFormat={}{0:dd.MM.yyyy HH:mm}}" Width="120"/>
                            <DataGridTextColumn Header="Товар" Binding="{Binding ProductName}" Width="*"/>
                            <DataGridTextColumn Header="Кількість" Binding="{Binding Quantity}" Width="80"/>
                            <DataGridTextColumn Header="Причина" Binding="{Binding Reason}" Width="120"/>
                            <DataGridTextColumn Header="Опис" Binding="{Binding Description}" Width="200"/>
                            <DataGridTextColumn Header="Відповідальний" Binding="{Binding UserName}" Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Кнопки експорту -->
                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button Content="Експорт у PDF" Click="ExportPdfButton_Click" Width="120"/>
                        <Button Content="Експорт у Excel" Click="ExportExcelButton_Click" Margin="5,0,0,0" Width="120"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>