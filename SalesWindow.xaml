<Window x:Class="WpfApp1.SalesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вікно продажів" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Label Grid.Row="0" Content="Доступні товари" FontSize="16" FontWeight="Bold" Margin="5"/>

        <!-- Пошук товарів -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <TextBox x:Name="SearchTextBox" Width="200" Margin="0,0,5,0"
                     GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"
                     TextChanged="SearchBox_TextChanged"/>
            <Button Content="Пошук" Click="SearchButton_Click" Width="80"/>
        </StackPanel>

        <!-- Список товарів -->
        <DataGrid x:Name="ProductDataGrid" Grid.Row="1" Margin="5"
                  AutoGenerateColumns="True" IsReadOnly="True"
                  SelectionMode="Single"/>

        <!-- Заголовок історії продажів -->
        <Label Grid.Row="2" Content="Історія продажів" FontSize="16" FontWeight="Bold" Margin="5,10,5,5"/>

        <!-- Історія продажів -->
        <DataGrid x:Name="SalesHistoryDataGrid" Grid.Row="3" Margin="5"
                  AutoGenerateColumns="True" IsReadOnly="True"/>

        <!-- Кнопки управління -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button x:Name="BtnSell" Content="Продати" Width="100" Margin="5" Click="BtnSell_Click"/>
            <Button x:Name="BtnGenerateReport" Content="Звіт PDF" Width="100" Margin="5" Click="BtnGenerateReport_Click"/>
            <Button Content="Закрити" Width="100" Margin="5" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>