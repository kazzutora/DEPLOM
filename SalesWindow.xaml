<Window x:Class="WpfApp1.SalesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="Вікно продажів" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок і фільтри -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5" HorizontalAlignment="Stretch">
            <Label Content="Доступні товари" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5,0,0,0">
                <ComboBox x:Name="CategoryFilterComboBox" Width="150" Margin="0,0,5,0" 
                          SelectionChanged="CategoryFilterComboBox_SelectionChanged">
                    <ComboBoxItem Tag="all">Всі категорії</ComboBoxItem>
                    <!-- Категорії будуть додані програмно -->
                </ComboBox>

                <TextBox x:Name="SearchTextBox" Width="200" Margin="0,0,5,0"
                         GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"
                         TextChanged="SearchBox_TextChanged"/>
                <Button Content="Пошук" Click="SearchButton_Click" Width="80"/>
                <Button Content="Скинути фільтри" Click="ResetFilters_Click" Margin="10,0,0,0" Width="120"/>
            </StackPanel>
        </StackPanel>

        <!-- Список товарів -->
        <DataGrid x:Name="ProductDataGrid" Grid.Row="1" Margin="5"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Single" SelectionUnit="FullRow">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ProductID}" Width="Auto"/>
                <DataGridTextColumn Header="Назва" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Категорія" Binding="{Binding CategoryName}" Width="*"/>
                <DataGridTextColumn Header="Кількість" Binding="{Binding Quantity}" Width="Auto"/>
                <DataGridTextColumn Header="Ціна" Binding="{Binding Price, StringFormat={}{0:N2} грн}" Width="Auto"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="Auto">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Status}" Value="Немає в наявності">
                                    <Setter Property="Foreground" Value="Red"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="Закінчується">
                                    <Setter Property="Foreground" Value="Orange"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="В наявності">
                                    <Setter Property="Foreground" Value="Green"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Фільтри історії продажів -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="5" HorizontalAlignment="Stretch">
            <Label Content="Історія продажів" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5,0,0,0">
                <DatePicker x:Name="StartDatePicker" Width="120" Margin="0,0,5,0" SelectedDateFormat="Short"/>
                <Label Content="по" VerticalAlignment="Center"/>
                <DatePicker x:Name="EndDatePicker" Width="120" Margin="5,0,5,0" SelectedDateFormat="Short"/>
                <Button Content="Застосувати" Click="ApplyDateFilter_Click" Width="100"/>
            </StackPanel>
        </StackPanel>

        <!-- Історія продажів -->
        <TabControl Grid.Row="3" Margin="5">
            <TabItem Header="Таблиця продажів">
                <DataGrid x:Name="SalesHistoryDataGrid" 
                          AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Дата" Binding="{Binding SaleDate}" Width="*"/>
                        <DataGridTextColumn Header="Товар" Binding="{Binding ProductName}" Width="*"/>
                        <DataGridTextColumn Header="Категорія" Binding="{Binding CategoryName}" Width="*"/>
                        <DataGridTextColumn Header="Кількість" Binding="{Binding QuantitySold}" Width="Auto"/>
                        <DataGridTextColumn Header="Сума" Binding="{Binding TotalAmount, StringFormat={}{0:N2} грн}" Width="Auto"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Header="Графік продажів">
                <lvc:CartesianChart x:Name="SalesChart" Series="{Binding SalesChartSeries}" LegendLocation="Right">
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis Title="Дата" Labels="{Binding SalesDates}"/>
                    </lvc:CartesianChart.AxisX>
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis Title="Сума (грн)"/>
                    </lvc:CartesianChart.AxisY>
                </lvc:CartesianChart>
            </TabItem>

            <TabItem Header="Топ товари">
                <lvc:PieChart x:Name="TopProductsChart" Series="{Binding TopProductsSeries}" 
                              LegendLocation="Bottom" InnerRadius="50">
                    <lvc:PieChart.DataTooltip>
                        <lvc:DefaultTooltip SelectionMode="OnlySender"/>
                    </lvc:PieChart.DataTooltip>
                </lvc:PieChart>
            </TabItem>
        </TabControl>

        <!-- Кнопки управління -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button x:Name="BtnSell" Content="Продати" Width="100" Margin="5" Click="BtnSell_Click"/>
            <Button x:Name="BtnGenerateReport" Content="Звіт PDF" Width="100" Margin="5" Click="BtnGenerateReport_Click"/>
            <Button Content="Закрити" Width="100" Margin="5" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>