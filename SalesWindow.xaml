<Window x:Class="WpfApp1.SalesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Продажі" Height="500" Width="977"
        Background="#F0F0F0">
    <Grid Margin="10">

        <!-- Верхня панель пошуку -->
        <Grid Height="50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBox Name="SearchBox"
                     Text="Введіть пошук..."
                     Foreground="Gray"
                     GotFocus="TextBox_GotFocus"
                     LostFocus="TextBox_LostFocus"
                     TextChanged="SearchBox_TextChanged"
                     Width="250" Height="35"
                     Padding="5"
                     FontSize="14"
                     BorderBrush="#0078D7"
                     BorderThickness="2"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top"
                     Grid.Column="0" Grid.ColumnSpan="2" Margin="40,-189,0,0"/>

            <Button Content="Продати"
                    Width="120" Height="35"
                    Click="BtnSell_Click"
                    FontSize="14"
                    Background="#0078D7"
                    Foreground="White"
                    BorderBrush="#005A9E"
                    BorderThickness="2"
                    Cursor="Hand"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="5,-189,0,0"
                    Grid.Column="2"/>
        </Grid>

        <!-- Таблиця товарів -->
        <DataGrid x:Name="ProductDataGrid" Height="380"
                  Margin="0,84,109,0"
                  AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  GridLinesVisibility="None"
                  CanUserAddRows="False"
                  BorderBrush="#DDDDDD"
                  BorderThickness="1"
                  RowBackground="White"
                  AlternatingRowBackground="#F7F7F7"
                  FontSize="14" HorizontalAlignment="Right" Width="805">

            <DataGrid.Resources>
                <!-- Стиль заголовків -->
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#0078D7"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Padding" Value="8"/>
                </Style>
                <!-- Стиль рядків -->
                <Style TargetType="DataGridRow">
                    <Setter Property="BorderBrush" Value="#E0E0E0"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Фото" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#DDDDDD" BorderThickness="1">
                                <Image Source="{Binding ImagePath}" Width="150" Height="150" Stretch="UniformToFill"/>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="ID" Binding="{Binding ProductID}" Width="50"/>
                <DataGridTextColumn Header="Назва товару" Binding="{Binding Name}" Width="300"/>
                <DataGridTextColumn Header="Кількість" Binding="{Binding Quantity}" Width="100"/>

                <DataGridTextColumn Header="Ціна (грн)" Binding="{Binding Price}" Width="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Foreground" Value="#007800"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Категорія" Binding="{Binding CategoryName}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
