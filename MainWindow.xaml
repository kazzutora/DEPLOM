<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Головне меню" Height="450" Width="800">
    <DockPanel>
        <!-- Верхнє меню -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Нове" Click="New_Click"/>
                <MenuItem Header="Відкрити" Click="Open_Click"/>
                <Separator/>
                <MenuItem Header="Вихід" Click="Exit_Click"/>
            </MenuItem>

            <MenuItem Header="Програма">
                <MenuItem Header="Продукти" Click="OpenProducts_Click"/>
                <MenuItem Header="Категорії" Click="OpenCategories_Click"/>
                <MenuItem Header="Постачальники" Click="OpenSuppliers_Click"/>
                <MenuItem Header="Продажі" Click="OpenSales_Click"/>
            </MenuItem>

            <MenuItem Header="Довідка">
                <MenuItem Header="Про програму" Click="About_Click"/>
            </MenuItem>
        </Menu>

        <!-- Панель інструментів -->
        <ToolBar DockPanel.Dock="Top">
            <Button Content="🏠 Головна" Click="Home_Click" Padding="5"/>
            <Button Content="📦 Продукти" Click="OpenProducts_Click" Padding="5"/>
            <Button Content="📂 Категорії" Click="OpenCategories_Click" Padding="5"/>
            <Button Content="🚛 Постачальники" Click="OpenSuppliers_Click" Padding="5"/>
            <Button Content="💰 Продажі" Click="OpenSales_Click" Padding="5"/>
          
        </ToolBar>

        <!-- Основний контент -->
        <Grid>
           


        </Grid>

    </DockPanel>
</Window>
