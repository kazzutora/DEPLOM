<Window x:Class="WpfApp1.ProductsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:primitives="clr-namespace:System.Windows.Controls.Primitives;assembly=PresentationFramework"
        Title="Управління продуктами" 
        Height="500" 
        Width="850"
        WindowStartupLocation="CenterScreen"
        Foreground="{DynamicResource TextBrush}">

    <Border Background="{DynamicResource CardBrush}" 
            CornerRadius="8" 
            Effect="{StaticResource CardShadow}" 
            Margin="16" 
            Padding="16">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Text="Список продуктів" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Margin="0 0 0 10"
                       HorizontalAlignment="Center"
                       Foreground="{DynamicResource PrimaryBrush}"/>

            <!-- Фільтр за категорією та пошук -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 0 0 10">
                <TextBlock Text="Фільтр за категорією:" 
                           FontWeight="SemiBold" 
                           VerticalAlignment="Center"
                           Margin="0 0 5 0"/>
                <ComboBox x:Name="CategoryFilterComboBox" 
                          Width="150"
                          SelectionChanged="CategoryFilterComboBox_SelectionChanged"/>

                <TextBlock Text="Пошук:" 
                           FontWeight="SemiBold" 
                           VerticalAlignment="Center"
                           Margin="15 0 5 0"/>
                <TextBox x:Name="SearchTextBox" 
                         Width="200" 
                         TextChanged="SearchTextBox_TextChanged"/>
            </StackPanel>

            <!-- ListBox з UniformGrid для відображення продуктів у вигляді сітки -->
            <ListBox x:Name="ProductsListBox" Grid.Row="2" Margin="0" SelectionMode="Single"
                     MouseDoubleClick="Product_MouseDoubleClick">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <primitives:UniformGrid Columns="4" Rows="0" 
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Top"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="1" 
                                BorderBrush="{DynamicResource BorderBrush}" 
                                CornerRadius="6" 
                                Padding="10" 
                                Margin="5"
                                Width="180"
                                Background="{DynamicResource LightBackgroundBrush}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Зображення продукту -->
                                <Border Grid.Row="0" 
                                        Width="120" 
                                        Height="80" 
                                        Background="WhiteSmoke"
                                        CornerRadius="4"
                                        HorizontalAlignment="Center"
                                        Margin="0 0 0 5">
                                    <Image Source="{Binding ProductImage}" 
                                           Stretch="Uniform"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                                </Border>

                                <!-- Назва продукту -->
                                <TextBlock Grid.Row="1" 
                                           Text="{Binding Name}" 
                                           FontWeight="Bold" 
                                           FontSize="13"
                                           HorizontalAlignment="Center"
                                           TextWrapping="Wrap"
                                           TextTrimming="CharacterEllipsis"
                                           MaxWidth="160"
                                           Margin="0 0 0 2"/>

                                <!-- Категорія -->
                                <TextBlock Grid.Row="2" 
                                           Text="{Binding Category}" 
                                           FontStyle="Italic"
                                           HorizontalAlignment="Center"
                                           FontSize="11"
                                           Margin="0 0 0 2"/>

                                <!-- Кількість -->
                                <TextBlock Grid.Row="3" 
                                           HorizontalAlignment="Center"
                                           FontSize="12">
                                    <Run Text="Кількість:" FontWeight="SemiBold"/>
                                    <Run Text="{Binding Quantity}"/>
                                </TextBlock>

                                <!-- Ціна -->
                                <StackPanel Grid.Row="4" 
                                            Orientation="Horizontal" 
                                            HorizontalAlignment="Center"
                                            Margin="0 2 0 0">
                                    <TextBlock Text="Ціна:" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding Price, StringFormat={}{0:N2} грн}" 
                                               FontWeight="Bold"
                                               Margin="3 0 0 0"/>
                                </StackPanel>

                                <!-- Статус наявності -->
                                <TextBlock Grid.Row="5" 
                                           Text="Немає в наявності" 
                                           Foreground="Red" 
                                           FontWeight="Bold" 
                                           HorizontalAlignment="Center"
                                           Margin="0 3 0 0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Quantity}" Value="0">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Кнопки управління -->
            <StackPanel Grid.Row="3" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0 15 0 0">
                <Button Content="Додати" 
                        Click="AddProduct_Click" 
                        Style="{DynamicResource PrimaryButton}"
                        Width="120"
                        Margin="0 0 8 0"/>
                <Button Content="Редагувати" 
                        Click="EditProduct_Click" 
                        Style="{StaticResource FlatButton}"
                        Width="120"
                        Margin="0 0 8 0"/>
                <Button Content="Видалити" 
                        Click="DeleteProduct_Click" 
                        Style="{StaticResource FlatButton}"
                        Width="120"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>